{{> welcome-menu active="signup"}}

<section class="box box-link-hover-shadow">
  <h1 class="title">Sign up</h1>
  <form action="/register" method="POST">
    <label class="label">Name</label>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <input class="input has-background-success-light" type="text" placeholder="Enter First Name" name="firstName">
        </div>
        <div class="field">
          <input class="input has-background-success-light" type="text" placeholder="Enter Last Name" name="lastName">
        </div>
      </div>
    </div>
    <div class="field">
      <label class="label">Email</label> <input class="input has-background-success-light" type="text" placeholder="Enter Email" name="email">
    </div>
    <div class="field">
      <label class="label">Password</label> <input class="input has-background-success-light" type="password" placeholder="Enter Password" name="password">
    </div>
    <div class="field is-grouped">
      <button class="button is-success">Submit</button>
    </div>
  </form>
</section>