{{#each trails}}
  <div class="box box-link-hover-shadow">
    <h2 class="title is-4 mb-6">
      {{title}}
    </h2>
    <a href="/trail/{{_id}}" class="button has-background-success-light is-large">
      <span class="icon is-small">
        <i style="color: Forestgreen" class="fas fa-folder-open"></i>
      </span>
    </a>
    <a href="/dashboard/deletetrail/{{_id}}" class="button has-background-success-light is-large">
      <span class="icon is-small">
        <i style="color: Forestgreen" class="fas fa-trash"></i>
      </span>
    </a>
  </div>
{{/each}}
