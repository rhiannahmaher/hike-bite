<div class="box box-link-hover-shadow mt-5">
  <div class="title is-4 has-text-weight-bold">
    Stops
  </div>
  <div class="table-container">
    <table class="table is-fullwidth is-bordered is-striped is-hoverable has-text-left">
      <thead>
        <tr class="has-background-success-light has-text-weight-bold">
          <th>Name</th>
          <th>Type</th>
          <th>Opening Hours</th>
          <th>Latitude</th>
          <th>Longitude</th>
        </tr>
      </thead>
      <tbody>
        {{#each trail.stops}}
        <tr>
          <td>{{title}}</td>
          <td>{{type}}</td>
          <td>{{hours}}</td>
          <td>{{latitude}}</td>
          <td>{{longitude}}</td>
          <td class="button-cell has-text-centered">
            <form action="/trail/{{trailId}}/stop/{{stopId}}" method="POST"> 
              <a href="/stop/{{../trail._id}}/editstop/{{_id}}" class="button has-background-success-light is-small">
                <i style="color: Forestgreen" class="fas fa-edit"></i>
              </a>
            </form>
          </td>
          <td class="button-cell has-text-centered">
            <form action="/trail/{{trailId}}/stop/{{stopId}}" method="POST"> 
              <a href="/trail/{{../trail._id}}/deletestop/{{_id}}" class="button has-background-success-light is-small">
                <i style="color: Forestgreen" class="fas fa-trash"></i>
              </a>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
